{
  "id": "fhir-datastore-hapi-fhir",
  "name": "Fhir Datastore Package - HAPI-FHIR",
  "description": "A FHIR compliant server for the platform",
  "type": "infrastructure",
  "version": "0.0.1",
  "dependencies": ["database-postgres"],
  "environmentVariables": {
    "HAPI_FHIR_INSTANCES": "1",
    "HAPI_FHIR_MAX_REPLICAS_PER_NODE": "1",
    "HAPI_FHIR_CPU_LIMIT": "0",
    "HAPI_FHIR_CPU_RESERVE": "0.05",
    "HAPI_FHIR_MEMORY_LIMIT": "3G",
    "HAPI_FHIR_MEMORY_RESERVE": "500M",
    "FHIR_VERSION": "R4",
    "HAPI_DB_SET": "postgres-1:5432",
    "POSTGRES_SERVICE": "postgres-1",
    "POSTGRES_PORT": 5432,
    "POSTGRESQL_USER": "postgres",
    "POSTGRESQL_PASSWORD": "instant101",
    "POSTGRESS_DATABASE": "postgres",
    "HF_POSTGRESQL_PASSWORD": "instant101",
    "HF_POSTGRESQL_USERNAME": "hapi",
    "HF_POSTGRESQL_DATABASE": "hapi",
    "HF_JAVA_OPTS": "-Xmx2g",
    "HF_IMAGE_TAG": "v7.0.3-wget",
    "HF_MAX_POOL_SIZE": "80",
    "HF_PGPOOL_ENABLED": "true",
    "HF_POSTGRES_FAILOVER": "automatic",
    "HF_POSTGRES_DEGRADED_MONITORING_TIMEOUT": "5",
    "IPS_ENABLED": "true",
    "ENABLE_RUNTIME_IG_UPLOAD": "false"
  }
}
